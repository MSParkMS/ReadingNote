<html>

<head>
  <%- include('head') %>
</head>

<body>
  <%- include('nav') %>
  <center>
    <% if (locals.note.comments.length > 0) { %>
      <h1><%=nickname%>님 <%=title%> 책의 노트입니다.</h1>
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th class="align-center">노트</th>
          </tr>
        </thead>
        <tbody>
        <% locals.note.comments.forEach((comment) => { %>
          <tr>
            <td class="align-center"><%=comment%></td>
          </tr>
        <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <h1><%=nickname%>님 <%=title%> 책의 노트가 없습니다.</h1>
    <% } %>
    <br>
    <form method="post" action="/note/<%=title%>">
      <table>
        <tr>
          <td><labal>노트</labal></td>
          <td><input type="text" name="comment" placeholder="노트"></td>
        </tr>
        <tr>
          <td><labal>노트 페이지 시작</labal></td>
          <td><input type="text" name="page_begin" placeholder="노트 페이지 시작"></td>
        </tr>
        <tr>
          <td><labal>노트 페이지 끝</labal></td>
          <td><input type="text" name="page_end" placeholder="노트 페이지 끝"></td>
        </tr>
      </table>
      <br>
      <input type="submit" value="노트 추가하기">
    </form>
  </center>
</body>

</html>